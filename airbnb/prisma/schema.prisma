generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  password  String
  isAdmin   Boolean   @default(false)
  createdAt DateTime  @default(now())
  bookings  Booking[]
}

model Property {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  place         String
  pricePerNight Int
  availableFrom Boolean
  bookings      Booking[] // One-to-many relationship: A property can have multiple bookings
}

model Booking {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  checkingIn  DateTime
  checkingOut DateTime
  totalPrice  Int
  
  // Relations
  user        User     @relation(fields: [userId], references: [id])
  userId      String   @db.ObjectId

  property    Property @relation(fields: [propertyId], references: [id]) // Optional: Booking related to a Property
  propertyId  String   @db.ObjectId
}
